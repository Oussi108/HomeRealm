@using HomeRealm_Project.Models
@model PropertiesViewModel
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/js/Listing_JS.js"></script>
<link href="~/Content/CSS/Listing_kh.css" rel="stylesheet" />
<div>
    @Html.Partial("searching")

</div>
<link href="~/Content/CSS/CardsListing.css" rel="stylesheet" />
<section class="gallery">
    <div class="container mt-100">

        <div class="container mt-5 mb-5">
            <div class="d-flex justify-content-center row">
                <div class="col-md-10">
                    @foreach (var property in Model.Properties)
                    {
                       
                        <div class="row p-2 bg-white border rounded">
                            <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="~/images/@property.ImageUrl"></div>
                            <div class="col-md-6 mt-1">
                                <h5>@property.Title</h5>
                                <div class="d-flex flex-row">
                                    <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>310</span>
                                </div>
                                <div class="mt-1 mb-1 spec-1"><span>@property.Country</span><span class="dot"></span><span>@property.City</span><span class="dot"></span><span>@property.Address<br></span></div>
                                <div class="mt-1 mb-1 spec-1"><span>Updated in :@property.UpdatedAt.ToString()</span></div>
                                <p class="text-justify text-truncate para mb-0">@property.Description.<br><br></p>
                            </div>
                            <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                                <div class="d-flex flex-row align-items-center">
                                    <h4 class="mr-1">$@property.Price</h4>
                                </div>
                                <h6 class="text-success">Capacity : @property.Capacity Person</h6>
                                <div class="d-flex flex-column mt-4">
                                    <a href="/listing/Details/@property.Id">
                                        <button class="btn btn-primary btn-sm" type="button">Details</button>
                                    </a>
                                    <a href="/listing/book/@property.Id">
                                        <button class="btn btn-outline-primary btn-sm mt-2" type="button">Rent Now</button>
                                        </a>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>


    </div>

</section>
